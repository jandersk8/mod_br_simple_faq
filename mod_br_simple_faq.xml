                <field name="a6" type="textarea" default="" label="Answer 6" filter="raw" />
                <field name="q7" type="text" default="" label="Question 7" />
                <field name="a7" type="textarea" default="" label="Answer 7" filter="raw" />
                <field name="q8" type="text" default="" label="Question 8" />
                <field name="a8" type="textarea" default="" label="Answer 8" filter="raw" />
                <field name="q9" type="text" default="" label="Question 9" />
                <field name="a9" type="textarea" default="" label="Answer 9" filter="raw" />
                <field name="q10" type="text" default="" label="Question 10" />
                <field name="a10" type="textarea" default="" label="Answer 10" filter="raw" />
            </fieldset>

            <fieldset name="style" label="Design Settings">
                <field name="max_width" type="text" default="800px" label="Max Width" />
                <field name="bg_title" type="color" default="#f4f4f4" label="Title Background" />
                <field name="bg_title_active" type="color" default="#e0e0e0" label="Title Background (Active)" />
                <field name="color_title" type="color" default="#333333" label="Title Text Color" />
                <field name="bg_answer" type="color" default="#ffffff" label="Answer Background" />
                <field name="color_content" type="color" default="#666666" label="Answer Text Color" />
                <field name="border_color" type="color" default="#dddddd" label="Border Color" />
                <field name="border_radius" type="text" default="4px" label="Border Radius" />
                <field name="font_size_q" type="text" default="18px" label="Question Font Size" />
                <field name="font_size_a" type="text" default="16px" label="Answer Font Size" />
            </fieldset>
        </fields>
    </config>
</extension>