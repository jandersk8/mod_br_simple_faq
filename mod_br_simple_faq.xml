    <authorUrl>https://github.com/jandersk8</authorUrl>
    <version>1.0.0</version>
    <description>MOD_BR_SIMPLE_FAQ_XML_DESCRIPTION</description>

    <namespace path="src">Br\Module\SimpleFaq</namespace>

    <files>
        <filename module="mod_br_simple_faq">mod_br_simple_faq.php</filename>
        <folder>src</folder>
        <folder>services</folder>
        <folder>tmpl</folder>
        <folder>language</folder>
        <file>LICENSE.txt</file>
    </files>

    <languages>
        <language tag="en-GB">language/en-GB/en-GB.mod_br_simple_faq.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.mod_br_simple_faq.sys.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="basic" label="FAQ Items">
                <field name="q1" type="text" default="Question Sample 1" label="Question 1" />
                <field name="a1" type="textarea" default="Lorem ipsum dolor sit amet, consectetur adipiscing elit." label="Answer 1" filter="raw" />
                <field name="q2" type="text" default="Question Sample 2" label="Question 2" />
                <field name="a2" type="textarea" default="Lorem ipsum dolor sit amet, consectetur adipiscing elit." label="Answer 2" filter="raw" />
